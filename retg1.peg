parse_program <-
  _ declare_program (_ top_level_declaration)* _ declare_run _ eof {
    FILE* asmFile = NULL;

    asmFile = fopen(asmFileName, "w");
    if( asmFile == NULL ) {
      printf( "Error creating assembler file '%s'\n", asmFileName );
      exit(3);
    }

    fprintf( asmFile,
      "\n"
      "  BITS 32\n"
      "\n"
      "%s\n"
      "%s\n"
      "%s\n"
      "%s\n"
      "%s\n",
      auxil->asmgen.dllImports ? auxil->asmgen.dllImports : "",
      auxil->asmgen.codeSegment ? auxil->asmgen.codeSegment : "",
      auxil->asmgen.dataSegment ? auxil->asmgen.dataSegment : "",
      auxil->asmgen.stackSegment ? auxil->asmgen.stackSegment : "",
      auxil->asmgen.bssSegment ? auxil->asmgen.bssSegment : ""
    );

    fclose( asmFile );
    asmFile = NULL;
  }

# program IDENT
declare_program <-
  'program' _ <ident> {
    auxil->asmgen.dllImports = sdsnew(
      "  extern ExitProcess\n"
      "  import ExitProcess kernel32.dll\n"
      "\n"
    );

    auxil->asmgen.codeSegment = sdsnew(
      "segment .code use32\n"
      "\n"
    );

    auxil->asmgen.dataSegment = sdsnew(
      "segment .data use32\n"
      "\n"
    );

    auxil->asmgen.stackSegment = sdsnew(
      "segment .stack use32\n"
      "\n"
    );

    auxil->asmgen.bssSegment = sdsnew(
      "segment .bss use32\n"
      "\n"
    );
  }

# top level declarations
top_level_declaration <-
  declare_const

# const TYPESPEC IDENT = CONSTEXPR
declare_const <-
  'const' _ <basetype?> _ <ident> _ '=' _ <constexpr> {
    TypeSpec typeSpec = {};
    SymbolValue value = {};

    typeSpec.simpleType = typeUint;
    typeSpec.bits = 32;
    value.vtype = valUint32;

    printf( "CONST[%s] %s = %s\n", $1, $2, $3 );

    if( strcmp($1, "uint") == 0 ) {
      typeSpec.simpleType = typeUint;
      value.vtype = valUint;
      typeSpec.bits = 32;

    } else if( strcmp($1, "uint8") == 0 ) {
      typeSpec.simpleType = typeUint8;
      value.vtype = valUint8;
      typeSpec.bits = 8;

    } else if( strcmp($1, "uint16") == 0 ) {
      typeSpec.simpleType = typeUint16;
      value.vtype = valUint16;
      typeSpec.bits = 16;

    } else if( strcmp($1, "uint32") == 0 ) {
      typeSpec.simpleType = typeUint32;
      value.vtype = valUint32;
      typeSpec.bits = 32;

    } else if( strcmp($1, "uint64") == 0 ) {
      typeSpec.simpleType = typeUint64;
      value.vtype = valUint64;
      typeSpec.bits = 32;

    } else if( strcmp($1, "int") == 0 ) {
      typeSpec.simpleType = typeInt;
      value.vtype = valInt;
      typeSpec.bits = 32;

    } else if( strcmp($1, "int8") == 0 ) {
      typeSpec.simpleType = typeInt8;
      value.vtype = valInt8;
      typeSpec.bits = 8;

    } else if( strcmp($1, "int16") == 0 ) {
      typeSpec.simpleType = typeInt16;
      value.vtype = valInt16;
      typeSpec.bits = 16;

    } else if( strcmp($1, "int32") == 0 ) {
      typeSpec.simpleType = typeInt32;
      value.vtype = valInt32;
      typeSpec.bits = 32;

    } else if( strcmp($1, "int64") == 0 ) {
      typeSpec.simpleType = typeInt64;
      value.vtype = valInt64;
      typeSpec.bits = 32;

    } else if( strcmp($1, "char") == 0 ) {
      typeSpec.simpleType = typeChar;
      value.vtype = valChar;
      typeSpec.bits = 8;

    } else if( strcmp($1, "bool") == 0 ) {
      typeSpec.simpleType = typeBool;
      value.vtype = valBool;
      typeSpec.bits = 8;
    }

    if( DeclareConst(&auxil->symtab, $1, &typeSpec, &value) == 0 ) {
      Error( "DeclareConst failed\n" );
    }
  }

# run block declarations
declare_run <-
  declare_run_begin
  _
  declare_run_end

declare_run_begin <-
  'run' {
    auxil->asmgen.codeSegment = sdscat(
      auxil->asmgen.codeSegment,
      "\n"
      "..start:\n"
      "  push    ebp\n"
      "  mov     ebp, esp\n"
      "\n"
    );
  }

declare_run_end <-
  'end' {
    auxil->asmgen.codeSegment = sdscat(
      auxil->asmgen.codeSegment,
      "  mov     esp, ebp\n"
      "  pop     ebp\n"
      "\n"
      "  push    dword 0\n"
      "  call    [ExitProcess]\n"
      "\n"
    );
  }

